# Taxi Fare Prediction API - Environment Configuration
# Copy this file to .env and update the values as needed

# Application Environment
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# CORS Configuration (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:8080

# Model Configuration
MODEL_PATH=./models/best_taxi_fare_model.pkl
PROCESSOR_PATH=./models/feature_processor.pkl
METADATA_PATH=./models/final_model_metadata.json

# Performance Settings
MAX_PREDICTION_TIME=5.0
CACHE_PREDICTIONS=false
CACHE_TTL=300

# Monitoring Settings
ENABLE_METRICS=true
METRICS_PATH=/metrics
HEALTH_CHECK_PATH=/health

# Logging Configuration
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=

# Security Settings
ALLOWED_HOSTS=*
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Database Configuration (for future use)
# DATABASE_URL=sqlite:///./taxi_predictions.db

# Redis Configuration (for future caching)
# REDIS_URL=redis://localhost:6379/0

# API Keys (if needed)
# EXTERNAL_API_KEY=your_api_key_here
