# Taxi Fare Prediction Frontend - Environment Configuration
# Copy this file to .env and update the values as needed
# Updated for Render deployment support

# API Configuration - Update with your Render backend URL
REACT_APP_API_URL=https://taxi-fare-api.onrender.com

# Application Environment
REACT_APP_ENVIRONMENT=production

# Map Configuration (NYC coordinates)
REACT_APP_DEFAULT_LAT=40.7589
REACT_APP_DEFAULT_LNG=-73.9851
REACT_APP_DEFAULT_ZOOM=12

# Application Configuration
REACT_APP_APP_NAME=Taxi Fare Prediction
REACT_APP_VERSION=1.0.0

# Build Configuration (for production)
GENERATE_SOURCEMAP=false
CI=false

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_DEBUG=false
REACT_APP_CACHE_ENABLED=true

# Development Settings (uncomment for local development)
# REACT_APP_API_URL=http://localhost:8000
# REACT_APP_ENVIRONMENT=development
# GENERATE_SOURCEMAP=true

# External Services (if needed)
# REACT_APP_SENTRY_DSN=your_sentry_dsn_here
# REACT_APP_GOOGLE_ANALYTICS_ID=your_ga_id_here
